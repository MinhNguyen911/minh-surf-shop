<% layout('layouts/boilerplate') -%>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="new-post-form">
                <h1>New Post</h1>
                <form action="/posts" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="post-title">Title:</label>
                        <input type="text" name="post[title]" class="form-control" id="post-title" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <label for="post-title">Price:</label>
                        <input type="number" class="form-control" name="post[price]" step=".01" placeholder="Price">
                    </div>
                    <div class="form-group">
                        <label for="post-title">File:</label>
                        <input type="file" class="form-control" accept="images/*" name="images" multiple>
                    </div>
                    <div class="form-group">
                        <label for="post-title">Description:</label>
                        <textarea name="post[description]" class="form-control" cols="15" rows="5" placeholder="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="post-title">Location:</label>
                        <input name="post[location]" class="form-control" type="text" placeholder="Location">
                    </div>
                    <input type="submit" class="btn btn-block btn-primary">
                </form>
            </div>
        </div>
    </div>
</div>

<!-- 
    title: String,
    price: String,
    description: String,
    location: String,
 -->